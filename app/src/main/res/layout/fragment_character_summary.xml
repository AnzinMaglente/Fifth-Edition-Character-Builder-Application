<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="355sp"
    android:layout_height="156sp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary"
    tools:context=".fragments.CharacterSummaryFragment">

    <LinearLayout
        android:id="@+id/character_stats"
        android:layout_width="95sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/str_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/str_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/str_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/dex_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/dex_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dex_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/int_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/int_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/int_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/wis_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/wis_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wis_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/cha_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/cha_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cha_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:background="@color/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/con_edt"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/con_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value_two"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/con_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/character_details"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/character_stats"
        app:layout_constraintStart_toEndOf="@+id/character_stats"
        >

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/name_prompt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/race_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/race_prompt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/class_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/class_prompt"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/description_prompt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/desc_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/character_details"
        app:layout_constraintStart_toEndOf="@+id/character_details"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/char_img"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/image_hover_desc"
            android:background="@drawable/backgroundframe2"
            android:src="@drawable/avatar_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/read_more_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/read_more_txt"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>